<!-- Instantiate Feather -->
<script type='text/javascript'>
   var featherEditor = new Aviary.Feather({
       apiKey: 'i6kQvTEjGUihAyGsQNV3wg',
       apiVersion: 2,
       tools: 'effects,stickers,resize,orientation,enhance,contrast,warmth,splash,text,sharpness,saturation,brightness,draw',
       appendTo: '',
       onSave: function(imageID, newURL) {
           var img = document.getElementById(imageID);
           img.src = newURL;
           
           
       },
       onError: function(errorObj) {
           alert(errorObj.message);
       }
   });
   function launchEditor(id, src) {
       featherEditor.launch({
           image: id,
           url: src
       });
      return false;
   }
   
   
</script>
